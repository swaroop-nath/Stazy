<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="4dp"
    android:paddingEnd="4dp"
    android:paddingStart="4dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@id/shortlist_hire_image_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_glide_placeholder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@id/shortlist_hire_divider"
        android:layout_width="80dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shortlist_hire_image_view"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@id/shortlist_hire_name_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Swaroop"
        app:layout_constraintTop_toBottomOf="@id/shortlist_hire_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:layout_marginTop="6dp"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="2dp"/>
</android.support.constraint.ConstraintLayout>