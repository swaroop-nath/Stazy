<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:layout_gravity="bottom">

    <TextView
        android:id="@id/activity_main_performer_menu_item_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:onClick="openMyAccount"
        android:paddingBottom="@dimen/activity_performer_menu_divider_top_margin"
        android:paddingStart="@dimen/activity_main_performer_menu_item_start_padding"
        android:paddingTop="@dimen/activity_main_performer_menu_item_profile_top_margin"
        android:text="@string/activity_main_performer_menu_item_profile_text"
        android:drawableLeft="@drawable/ic_account"
        android:drawablePadding="12dp"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@id/activity_main_performer_menu_item_sign_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_main_performer_menu_container_bottom_padding"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:paddingBottom="@dimen/activity_performer_menu_divider_top_margin"
        android:paddingStart="@dimen/activity_main_performer_menu_item_start_padding"
        android:paddingTop="@dimen/activity_main_performer_menu_item_sign_out_top_margin"
        android:text="@string/activity_main_performer_menu_item_sign_out_text"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/text_size_large"
        android:drawableLeft="@drawable/ic_logout"
        android:drawablePadding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_main_performer_menu_item_profile"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>