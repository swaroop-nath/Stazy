<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@id/ap_condtions_dialog_performance_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/ap_condtions_dialog_performance_time_text_view_top_margin"
        android:layout_marginStart="@dimen/ap_condtions_dialog_performance_time_text_view_start_margin"
        android:text="@string/ap_condtions_dialog_performance_time_text_view_text"
        android:textSize="@dimen/text_size_normal"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryText"/>

    <TimePicker
        android:id="@id/ap_condtions_dialog_performance_time_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ap_condtions_dialog_performance_time_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/ap_condtions_dialog_performance_time_picker_top_margin"
        android:timePickerMode="spinner"/>
</android.support.constraint.ConstraintLayout>